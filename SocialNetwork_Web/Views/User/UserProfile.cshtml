@model SocialNetwork_Dal.Entities.User
@{
    ViewBag.Title = "MyProfile";
}

@{
    var cuser = Session["loggedinUser"] as SocialNetwork_Dal.Entities.User;
}
<style>
    .profiletopSec {
        height: auto;
        min-height: 400px;
        width: 100%;
        border: 1px solid gray;
    }

    .profileImg {
        height: 250px;
        width: 250px;
        cursor: pointer;
    }

        .profileImg > img {
            width: 90%;
            height: 90%;
            border-radius: 50%;
        }

    .image-upload {
    }

        .image-upload > input {
            display: none;
        }

        .image-upload img {
            width: 40px;
            cursor: pointer;
            margin-top: 2rem;
        }
</style>

