                $('#uploadedimg')
                    .attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);





        }
    }
    //send req func
    function SendRequest(e, toId) {
        //alert("started Sending")
        console.log(e.innerHTML);
        console.log(toId);

        e.innerHTML = "Req Send!"

        $.ajax({
            type: "POST",
