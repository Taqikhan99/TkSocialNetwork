            icon: "success",
        });
    }
    if ('@ViewBag.reqAccepted' != "") {
        swal({
            title: "Succss",
            text: "@ViewBag.updProf",
            icon: "success",
        });
    }



    // A $( document ).ready() block.
    $(document).ready(function () {
        console.log("ready!");
        
    });

    console.log('@Session["loggedinUser"]')

    function readURL(input) {
        console.log(input);
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                console.log($("#uploadedimg"));
                console.log(e);
                //$("#uploadedimg").style.display = "block";
                $('#uploadedimg')
                    .attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);



        }




    }



    //create a post

    function clickPost() {

        var postText = document.getElementById("posttext").value;
        var postImage = document.getElementById("imginputPost").files[0];

        console.log(postImage);
        if (postText == "") {
            callErrorAlert("Must Provide Some Text to Post");
        }
        else {
            var post = {
                postText,
                //postImage
            }
            console.log(post);
            PostSubmit(post)
        }
    }

    //submit form of post
    function PostSubmit(post) {

        $.ajax({
            type: "POST",
            url: "/User/CreatePost",
            data: { post },
            processData: false,
            contentType:false,
            success: function (data) {
                console.log(data)
            }
        });

    }



    function callSuccessAlert(message) {
        swal({
            title: "Success",
            text: message,
            icon: "success",
        });
    }

    function callErrorAlert(message) {
        swal({
            title: "Error",
            text: message,
            icon: "error",
        });
    }

   



</script>
